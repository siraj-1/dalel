import 'package:dalel/core/utils/app_assets.dart';
import 'package:dalel/features/onBording/presntaion/widgets/custom_smooth_page_indecator';
import 'package:flutter/material.dart';

class OnBordingWidgetBody extends StatelessWidget {
  OnBordingWidgetBody({super.key});
  final PageController _controller = PageController(); 
  
  @override
  Widget build(BuildContext context) {
    return Expanded(
      child: PageView.builder(
        controller: _controller,   
        itemCount: 3,
        itemBuilder: (context, index) {
          return Column(
            children: [
              Expanded( // Only added this
                child: Image.asset(Assets.imagesOnbording1),
              ),
              CustomSmoothPageIndecator(controller: _controller), // Fixed parameter passing
            ],
          );
        },
      ),
    );
  }
}